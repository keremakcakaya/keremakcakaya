Scanner scan = new Scanner(System.in);
        int size = scan.nextInt();
            for (int i = 0; i < size; i++) {
                for (int j = 0; j < size; j++) {
                   if (i == j || i + j == size - 1) {
                    System.out.print("X");
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
